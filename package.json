{
  "name": "restive-client",
  "displayName": "Restive Client",
  "description": "Restive Client for Visual Studio Code",
  "version": "0.26.0",
  "publisher": "egoughnour",
  "author": {
    "name": "Erik Goughnour",
    "email": "e.goughnour@gmail.com"
  },
  "icon": "images/restive_icon.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/egoughnour/vscode-restiveclient/issues",
    "email": "e.goughnour@gmail.com"
  },
  "homepage": "https://github.com/egoughnour/vscode-restiveclient/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/egoughnour/vscode-restiveclient.git"
  },
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "REST",
    "Http",
    "GraphQL",
    "multi-root ready"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension",
  "contributes": {
    "languages": [
      {
        "id": "http",
        "aliases": [
          "HTTP",
          "Http",
          "http"
        ],
        "extensions": [
          ".http",
          ".rest"
        ],
        "firstLine": "^(GET|POST|PUT|DELETE|PATCH|HEAD|OPTIONS|CONNECT|TRACE|LOCK|UNLOCK|PROPFIND|PROPPATCH|COPY|MOVE|MKCOL|MKCALENDAR|ACL|SEARCH)\\s+(.*?)HTTP/[0-9\\.]+$",
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "http",
        "scopeName": "source.http",
        "path": "./syntaxes/http.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "http",
        "path": "./snippets/http.json"
      }
    ],
    "commands": [
      {
        "command": "restive-client.request",
        "title": "Send Request",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.rerun-last-request",
        "title": "Rerun Last Request",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.cancel-request",
        "title": "Cancel Request",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.switch-environment",
        "title": "Switch Environment",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.history",
        "title": "View Request History",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.clear-history",
        "title": "Clear Request History",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.save-response",
        "title": "Save Full Response",
        "icon": {
          "light": "./images/save.svg",
          "dark": "./images/save-inverse.svg"
        },
        "category": "Restive Client"
      },
      {
        "command": "restive-client.save-response-body",
        "title": "Save Response Body",
        "icon": {
          "light": "./images/save-body.svg",
          "dark": "./images/save-body-inverse.svg"
        },
        "category": "Restive Client"
      },
      {
        "command": "restive-client.copy-response-body",
        "title": "Copy Response Body",
        "icon": {
          "light": "./images/copy.svg",
          "dark": "./images/copy-inverse.svg"
        },
        "category": "Restive Client"
      },
      {
        "command": "restive-client.generate-codesnippet",
        "title": "Generate Code Snippet",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.copy-codesnippet",
        "title": "Copy Code Snippet",
        "icon": {
          "light": "./images/copy.svg",
          "dark": "./images/copy-inverse.svg"
        },
        "category": "Restive Client"
      },
      {
        "command": "restive-client.copy-request-as-curl",
        "title": "Copy Request As cURL",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.clear-aad-token-cache",
        "title": "Clear Azure AD Token Cache",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.clear-cookies",
        "title": "Clear cookies",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.fold-response",
        "title": "Fold Response",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.unfold-response",
        "title": "Unfold Response",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.preview-html-response-body",
        "title": "HTML Preview",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.show-raw-response",
        "title": "Raw",
        "category": "Restive Client"
      },
      {
        "command": "restive-client.import-swagger",
        "title": "Import from file",
        "category": "Restive Client"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "restive-client.fold-response",
          "when": "httpResponsePreviewFocus"
        },
        {
          "command": "restive-client.unfold-response",
          "when": "httpResponsePreviewFocus"
        },
        {
          "command": "restive-client.preview-html-response-body",
          "when": "isHTMLResponse"
        },
        {
          "command": "restive-client.show-raw-response",
          "when": "isHTMLResponse"
        },
        {
          "command": "restive-client.save-response",
          "when": "httpResponsePreviewFocus"
        },
        {
          "command": "restive-client.save-response-body",
          "when": "httpResponsePreviewFocus"
        },
        {
          "command": "restive-client.copy-response-body",
          "when": "httpResponsePreviewFocus"
        },
        {
          "command": "restive-client.copy-codesnippet",
          "when": "codeSnippetPreviewFocus"
        }
      ],
      "editor/title": [
        {
          "when": "httpResponsePreviewFocus",
          "command": "restive-client.save-response",
          "group": "navigation@1"
        },
        {
          "when": "httpResponsePreviewFocus",
          "command": "restive-client.save-response-body",
          "group": "navigation@2"
        },
        {
          "when": "httpResponsePreviewFocus",
          "command": "restive-client.copy-response-body",
          "group": "navigation@3"
        },
        {
          "when": "httpResponsePreviewFocus",
          "command": "restive-client.fold-response",
          "group": "1_rest-client@1"
        },
        {
          "when": "httpResponsePreviewFocus",
          "command": "restive-client.unfold-response",
          "group": "1_rest-client@2"
        },
        {
          "when": "isHTMLResponse",
          "command": "restive-client.preview-html-response-body",
          "group": "1_rest-client@3"
        },
        {
          "when": "isHTMLResponse",
          "command": "restive-client.show-raw-response",
          "group": "1_rest-client@4"
        },
        {
          "when": "codeSnippetPreviewFocus",
          "command": "restive-client.copy-codesnippet",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "restive-client.request",
          "when": "editorTextFocus && editorLangId == http",
          "group": "rest-client@1"
        },
        {
          "command": "restive-client.generate-codesnippet",
          "when": "editorTextFocus && editorLangId == http",
          "group": "rest-client@2"
        },
        {
          "command": "restive-client.copy-request-as-curl",
          "when": "editorTextFocus && editorLangId == http",
          "group": "rest-client@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "restive-client.request",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "when": "editorTextFocus && editorLangId == 'http'"
      },
      {
        "command": "restive-client.request",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "when": "editorTextFocus && editorLangId == 'plaintext'"
      },
      {
        "command": "restive-client.rerun-last-request",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l",
        "when": "editorTextFocus && editorLangId == 'http'"
      },
      {
        "command": "restive-client.rerun-last-request",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l",
        "when": "editorTextFocus && editorLangId == 'plaintext'"
      },
      {
        "command": "restive-client.rerun-last-request",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l",
        "when": "httpResponsePreviewFocus"
      },
      {
        "command": "restive-client.cancel-request",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k",
        "when": "editorTextFocus && editorLangId == 'http'"
      },
      {
        "command": "restive-client.cancel-request",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k",
        "when": "editorTextFocus && editorLangId == 'plaintext'"
      },
      {
        "command": "restive-client.history",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h"
      },
      {
        "command": "restive-client.switch-environment",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e"
      },
      {
        "command": "restive-client.generate-codesnippet",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus && editorLangId == 'http'"
      },
      {
        "command": "restive-client.generate-codesnippet",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus && editorLangId == 'plaintext'"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Restive Client",
      "properties": {
        "restive-client.enableJsonBodyPatching": {
          "type": "boolean",
           "default": true,
           "description": "Enable JSONPath-based patching of JSON request bodies using a special HTTP header."
         },
         "restive-client.jsonPatchHeaderName": {
           "type": "string",
           "default": "X-RestClient-JsonPatch",
           "description": "Header name that carries JSONPath patch instructions. The header is stripped before the request is sent."
         },
        "restive-client.followredirect": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Follow HTTP 3xx responses as redirects."
        },
        "restive-client.defaultHeaders": {
          "type": "object",
          "default": {
            "User-Agent": "vscode-restiveclient"
          },
          "scope": "resource",
          "description": "If particular headers are omitted in request headers, these will be added as headers for each request."
        },
        "restive-client.timeoutinmilliseconds": {
          "type": "integer",
          "default": 0,
          "scope": "resource",
          "description": "Timeout in milliseconds. 0 for infinity"
        },
        "restive-client.showResponseInDifferentTab": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Show response in different tab"
        },
        "restive-client.requestNameAsResponseTabTitle": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Show request name as the response tab title"
        },
        "restive-client.rememberCookiesForSubsequentRequests": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Remember cookies for subsequent requests"
        },
        "restive-client.enableTelemetry": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Send out anonymous usage data"
        },
        "restive-client.excludeHostsForProxy": {
          "type": "array",
          "default": [],
          "scope": "resource",
          "description": "Excluded hosts when using using proxy settings"
        },
        "restive-client.fontSize": {
          "type": "number",
          "scope": "resource",
          "markdownDescription": "Controls the font size in pixels used in the response preview. When set to `0`, the value of `#editor.fontSize#` is used."
        },
        "restive-client.fontFamily": {
          "type": "string",
          "default": null,
          "scope": "resource",
          "description": "Controls the font family used in the response preview"
        },
        "restive-client.fontWeight": {
          "type": "string",
          "enum": [
            "normal",
            "bold",
            "bolder",
            "lighter",
            "100",
            "200",
            "300",
            "400",
            "500",
            "600",
            "700",
            "800",
            "900"
          ],
          "scope": "resource",
          "description": "Controls the font weight used in the response preview"
        },
        "restive-client.environmentVariables": {
          "type": "object",
          "default": {
            "$shared": {}
          },
          "scope": "resource",
          "markdownDescription": "Sets the environments and custom variables belongs to it, especially the special environment name '$shared' is used to create variables shared across all the individual environments (e.g., `{\"$shared\": {\"version\": \"v1\"}, \"production\": {\"host\": \"api.example.com\"}, \"sandbox\":{\"host\":\"sandbox.api.example.com\"}}`)",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "object",
                "default": {},
                "description": "Sets the custom variables belong to this environment",
                "additionalProperties": {
                  "anyOf": [
                    {
                      "type": "string",
                      "description": "Value of the custom variable"
                    }
                  ]
                }
              }
            ]
          }
        },
        "restive-client.mimeAndFileExtensionMapping": {
          "type": "object",
          "default": {},
          "scope": "resource",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "string"
              }
            ]
          },
          "markdownDescription": "Sets the custom mapping of mime type and file extension of saved response body (e.g., `{\"application/atom+xml\": \"xml\"}`)"
        },
        "restive-client.previewResponseInUntitledDocument": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Preview response in untitled document if set to true, otherwise displayed in html view"
        },
        "restive-client.oidcScopes": {
          "type": "array",
          "default": [],
          "scope": "resource",
          "description": "Scopes to be used by the OIDC client, default: [openid profile email]"
        },
        "restive-client.oidcCertificates": {
          "type": "object",
          "default": {},
          "scope": "resource",
          "description": "Certificate paths for Oidc callback server",
          "pattern": "^(?!http(s?)://)",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "object",
                "default": {},
                "description": "Certifcate paths for Oidc callback server",
                "properties": {
                  "cert": {
                    "type": "string",
                    "description": "Absolute or relative path of Public x509 certificate"
                  },
                  "key": {
                    "type": "string",
                    "description": "Absolute or relative path of Private key"
                  },
                  "pfx": {
                    "type": "string",
                    "description": "Absolute or relative path of PKCS #12 certificate"
                  },
                  "passphrase": {
                    "type": "string",
                    "description": "[Optional] A string of passphrase for the private key or pfx"
                  }
                },
                "dependencies": {
                  "cert": [
                    "key"
                  ],
                  "key": [
                    "cert"
                  ]
                }
              }
            ]
          }
        },
        "restive-client.certificates": {
          "type": "object",
          "default": {},
          "scope": "resource",
          "description": "Certificate paths for different hosts. The path can be absolute path or relative path(relative to workspace or current http file)",
          "pattern": "^(?!http(s?)://)",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "object",
                "default": {},
                "description": "Certifcate paths for specific host(e.g., foo.com, bar.org:8081), port is optional",
                "properties": {
                  "cert": {
                    "type": "string",
                    "description": "Absolute or relative path of Public x509 certificate"
                  },
                  "key": {
                    "type": "string",
                    "description": "Absolute or relative path of Private key"
                  },
                  "pfx": {
                    "type": "string",
                    "description": "Absolute or relative path of PKCS #12 certificate"
                  },
                  "passphrase": {
                    "type": "string",
                    "description": "[Optional] A string of passphrase for the private key or pfx"
                  }
                },
                "dependencies": {
                  "cert": [
                    "key"
                  ],
                  "key": [
                    "cert"
                  ]
                }
              }
            ]
          }
        },
        "restive-client.suppressResponseBodyContentTypeValidationWarning": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Suppress response body content type validation"
        },
        "restive-client.previewOption": {
          "type": "string",
          "enum": [
            "full",
            "headers",
            "body",
            "exchange"
          ],
          "enumDescriptions": [
            "Response headers, body and status line",
            "Response headers and status line",
            "Response body only",
            "Whole HTTP exchange including both request and response"
          ],
          "default": "full",
          "scope": "resource",
          "description": "Response preview output option"
        },
        "restive-client.disableHighlightResponseBodyForLargeResponse": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Controls whether to highlight response body for response whose size is larger than limit specified by `rest-client.largeResponseSizeLimitInMB`"
        },
        "restive-client.disableAddingHrefLinkForLargeResponse": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Controls whether to add href link in previewed response for response whose size is larger than limit specified by `rest-client.largeResponseSizeLimitInMB`"
        },
        "restive-client.largeResponseBodySizeLimitInMB": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "exclusiveMinimum": true,
          "scope": "resource",
          "markdownDescription": "Set the response body size threshold of MB to identify whether a response is a so-called 'large response', only used when `rest-client.disableHighlightResponseBodyForLargeResponse` and/or `rest-client.disableAddingHrefLinkForLargeResponse` is set to true"
        },
        "restive-client.previewColumn": {
          "type": "string",
          "enum": [
            "current",
            "beside"
          ],
          "markdownEnumDescriptions": [
            "Preview in the column of current request file",
            "previewing at the side of the current active column and the side direction depends on `workbench.editor.openSideBySideDirection` setting, either right or below the current editor column"
          ],
          "default": "beside",
          "scope": "resource",
          "description": "Response preview column option"
        },
        "restive-client.previewResponsePanelTakeFocus": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Preview response panel will take focus after receiving response."
        },
        "restive-client.formParamEncodingStrategy": {
          "type": "string",
          "enum": [
            "automatic",
            "never",
            "always"
          ],
          "markdownEnumDescriptions": [
            "Detecting encoding or not automatically and do the encoding job if necessary",
            "Treat provided request body as is, no encoding job will be applied",
            "Use for the scenario that `automatic` option not working properly, e.g., some special characters(`+`) are not encoded correctly"
          ],
          "default": "automatic",
          "scope": "resource",
          "markdownDescription": "Form param encoding strategy for request body of `x-www-form-urlencoded`."
        },
        "restive-client.addRequestBodyLineIndentationAroundBrackets": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Add line indentation around brackets(`{}`, `<>`, `[]`) in request body when pressing enter."
        },
        "restive-client.decodeEscapedUnicodeCharacters": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Decode escaped unicode characters in response body."
        },
        "restive-client.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "verbose"
          ],
          "default": "error",
          "scope": "resource",
          "description": "The verbosity of logging in the REST output panel"
        },
        "restive-client.enableSendRequestCodeLens": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable/disable sending request CodeLens in request file"
        },
        "restive-client.enableCustomVariableReferencesCodeLens": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable/disable custom variable references CodeLens in request file"
        },
        "restive-client.useContentDispositionFilename": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable/disable using filename from 'content-disposition' header, when saving response body"
        }
      }
    },
    "configurationDefaults": {
      "[http]": {
        "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "tslint": "tslint --project tsconfig.json",
    "test": "mocha -r tests/ts-hook.js \"tests/**/*.test.ts\""
  },
  "devDependencies": {
    "@types/aws4": "^1.5.1",
    "@types/fs-extra": "^5.0.4",
    "@types/jws": "^3.2.10",
    "@types/mocha": "^5.2.6",
    "@types/node": "^18.0.0",
    "@types/node-fetch": "^2.6.11",
    "@types/vscode": "^1.81.0",
    "mocha": "^10.4.0",
    "ts-loader": "^7.0.5",
    "tslint": "^6.1.2",
    "typescript": "^5.4.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "adal-node": "^0.2.4",
    "applicationinsights": "^1.0.5",
    "aws-amplify": "^5.0.3",
    "aws4": "^1.9.1",
    "code-highlight-linenums": "^0.2.1",
    "combined-stream": "^1.0.5",
    "content-disposition": "^0.5.3",
    "dayjs": "^1.8.20",
    "dotenv": "^8.2.0",
    "encodeurl": "^1.0.1",
    "filesize": "^3.3.0",
    "fs-extra": "^5.0.0",
    "got": "^11.8.6",
    "highlight.js": "^10.4.1",
    "http-proxy-agent": "^2.1.0",
    "https-proxy-agent": "^2.2.3",
    "httpsnippet": "^1.22.0",
    "iconv-lite": "^0.4.15",
    "jsonc-parser": "^2.0.2",
    "jsonpath-plus": "^10.1.0",
    "mime-types": "^2.1.14",
    "node-fetch": "^2.6.7",
    "node-jws": "^0.1.4",
    "open": "^10.1.0",
    "pretty-data": "^0.40.0",
    "sanitize-html": "^2.13.0",
    "tough-cookie": "^4.1.3",
    "tough-cookie-file-store": "^2.0.3",
    "uuid": "^3.3.2",
    "xmldom": "^0.5.0",
    "xpath": "^0.0.27",
    "yargs-parser": "^21.1.1"
  }
}
